{
  "name": "@mkushka/dell-brightness-sync",
  "version": "1.0.1",
  "description": "A zero-dependency CLI tool to automatically sync an external Dell monitor's brightness with the Mac's built-in display using m1ddc on Apple Silicon.",
  "keywords": [
    "dell",
    "monitor",
    "brightness",
    "m1ddc",
    "macOS"
  ],
  "homepage": "https://github.com/kushkamisha/dell-brightness-sync#readme",
  "bugs": {
    "url": "https://github.com/kushkamisha/dell-brightness-sync/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kushkamisha/dell-brightness-sync.git"
  },
  "license": "MIT",
  "author": "Misha Kushka",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "dell-brightness-sync": "src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "pm2:start": "npx pm2 start src/index.js --name 'dell-brightness-sync'",
    "pm2:stop": "npx pm2 stop dell-brightness-sync",
    "pm2:startup": "npx pm2 startup && npx pm2 save",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7"
  }
}
